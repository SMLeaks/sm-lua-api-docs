				"text": [
					"A number noise 2d function."
				],
				"params": [
					[
						"number",
						"x",
						"The X value."
					],
					[
						"number",
						"y",
						"The Y value."
					],
					[
						"integer",
						"seed",
						"The seed."
					]
				],
				"return": [
